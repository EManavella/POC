{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",  
    "paths": {
      "@/*": ["*"] 
    },
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["*/*", "**/*.ts", "tests/**/*.ts", "tsconfig.json", "shared", "character"],
  "exclude": ["node_modules"]
}